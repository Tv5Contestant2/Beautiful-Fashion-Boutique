@{
    ViewData["Title"] = "Contact Us";
}

<div class="container-fluid main-container">
    @*Breadcrumbs*@
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="StoreFront" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
        </ol>
    </nav>

    @*Content*@
    <div class="content col-md-12">
        <div class="row">
            <div class="col">
                <div class="row col-md-12">
                    <h5>STORE HOURS</h5>
                </div>
                <div class="row col-md-12">
                    <p>We're open 9:30 AM to 7:30 PM, Mondays to Sundays</p>
                </div>

                <div class="row col-md-12">
                    <h5>WHERE IS OUR PHYSICAL STORE?</h5>
                </div>
                <div class="row col-md-12">
                    <p>
                        We are located at Zone III (POB.), City of Dasmarinas, Cavite, Region IV-A (CALABARZON)
                    </p>
                </div>

                @*Google Maps*@
                <div class="row col-md-12" id="map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3227.782456969098!2d121.00735081962928!3d14.292993284129437!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3397d6167534ecdb%3A0xbe7642cdef028ecf!2s3%20Poblacion%2C%20Cavite%2C%20Philippines!5e0!3m2!1sen!2sae!4v1636310643644!5m2!1sen!2sae" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>

            <div class="col col-md-5">
                <h1 class="text-center">Contact Us</h1>
                <h6>Got a concern or questions about us? Send us a message and we'll respond as soon as possible.</h6>

                <div class="row col-12">
                    <div class="row form-group">
                        <label>Email Address</label>
                        <input class="form-control" />

                        <label>Name</label>
                        <input class="form-control" />

                        <label>Contact Number</label>
                        <input class="form-control" />

                        <label>Message</label>
                        <textarea class="form-control" rows="5"></textarea>

                        <div class="float-right" style="margin-top: 15px">
                            <input type="button" class="btn btn-info" value="Send Message" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>