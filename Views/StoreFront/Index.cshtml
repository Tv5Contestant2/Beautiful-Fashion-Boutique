@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid main-container">
    <div class="row">
        <div class="content mx-auto">

            @*Promotions*@
            @*<div class="row">
                    <a asp-area="" asp-controller="StoreFront" asp-action="Trending">
                        <img src="~/images/banners/banner-4.jpg" class="img-fluid"/>
                    </a>
                </div>*@
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/banners/banner-1.jpg" class="img-responsive d-block w-100" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/banners/banner-2.jpg" class="img-responsive d-block w-100" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/banners/banner-3.jpg" class="img-fluid d-block w-100" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/banners/banner-4.jpg" class="img-fluid d-block w-100" />
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            @*Section*@
            <section class="py-2">
                <header class="text-center pb-4 pt-4">
                    <p class="lead text-uppercase text-muted mb-0">Top for this month</p>
                    <h2 class="text-uppercase">Our Featured Picks</h2>
                </header>
                <div class="row justify-content-center pb-2">
                    <div style="width: 20rem; margin: 15px">
                        <a asp-area="" asp-controller="StoreFront" asp-action="Mens">
                            <img class="card-img-top" src="~/images/categories/category_apparel_accessories.jpg" alt="Card image cap">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">Men's Apparel</h5>
                            <p class="card-text">Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum</p>
                        </div>
                    </div>
                    <div style="width: 20rem; margin: 15px">
                        <a asp-area="" asp-controller="StoreFront" asp-action="Womens">
                            <img class="card-img-top" src="~/images/categories/category_apparel.jpeg" alt="Card image cap">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">Women's Apparel</h5>
                            <p class="card-text">Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum</p>
                        </div>
                    </div>
                    <div style="width: 20rem; margin: 15px">
                        <a asp-area="" asp-controller="StoreFront" asp-action="ShopAll">
                            <img class="card-img-top" src="~/images/categories/category_jewelry.jpeg" alt="Card image cap">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">Accessories</h5>
                            <p class="card-text">Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum</p>
                        </div>
                    </div>
                </div>
            </section>

            <section class="py-2">
                <div class="row justify-content-center pb-2">
                    <header class="text-center mb-5 pb-4">
                        <p class="lead text-uppercase text-muted mb-0">Money Saver</p>
                        <h2 class="text-uppercase">Our Top Steals</h2>
                    </header>
                    <div class="row justify-content-center pb-2">
                        @foreach (var item in Model)
                        {
                            <div class="swiper-slide swiper-slide-prev" role="group" aria-label="1 / 6" style="width: 241.6px; margin-right: 20px;">
                                <div class="product mb-5">
                                    <div class="image bg-light d-flex align-items-center justify-content-center">
                                        <img class="img-fluid" src="@String.Format("data:image/jpg;base64,{0}", item.Image)" alt="@item.Name">
                                        <div class="hover-overlay d-flex align-items-center justify-content-center">
                                            <div class="CTA d-flex align-items-center justify-content-center"><a href="#"><i class="fas fa-shopping-cart"></i></a><a class="active" href="detail.html"><i class="fas fa-search"></i> View</a><a href="#" data-toggle="modal" data-bs-target="#productView"><i class="fas fa-expand"></i></a></div>
                                        </div>
                                    </div>
                                    <div class="pt-3">
                                        <a class="reset-anchor" href="detail.html">
                                            <h3 class="h6 text-uppercase mb-0">@item.Name</h3>
                                        </a><span class="price text-muted">Php @item.Price</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </section>
        </div>
    </div>
    <div style="position: fixed; bottom: 10px; right: 10px;">
        <button onclick="topFunction()" id="btnTop" value="Back to Top" class="btn btn-outline-danger">
            <i class="fa fa-arrow-up" aria-hidden="true"></i>
        </button>
    </div>
</div>

<script>
    var btnTop = document.getElementById("btnTop");
    window.onload = function () { btnTop.style.display = "none"; }
</script>