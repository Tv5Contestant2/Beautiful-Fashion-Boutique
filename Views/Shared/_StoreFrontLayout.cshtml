<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Beautiful Time Fashion Boutique</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/bar.css" />

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>

<body>
    <!-- NAVBAR-->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a asp-area="" asp-controller="StoreFront" asp-action="Index" class="navbar-brand">
                <span><img src="~/images/store-logo.jpg" class="d-inline-block align-middle mr-2" width="250"></span>
            </a>

            <div class="collapse navbar-collapse py-3">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-area="" asp-controller="StoreFront" asp-action="Index" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="StoreFront" asp-action="Mens" class="nav-link">Men's</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="StoreFront" asp-action="Womens" class="nav-link">Women's</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="StoreFront" asp-action="Trending" class="nav-link">Trending/New Arrivals</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="StoreFront" asp-action="ShopAll" class="nav-link">Shop All</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="StoreFront" asp-action="AboutUs" class="nav-link">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="StoreFront" asp-action="ContactUs" class="nav-link">Contact Us</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- Links -->
        <div class="collapse navbar-collapse">
         @*Right*@ 
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="UnderConstruction" class="nav-link navbar-link-2 waves-effect">
                        @*<span class="badge badge-pill red">1</span>*@
                        <i class="fas fa-shopping-cart"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="UnderConstruction" class="nav-link waves-effect">
                        <i class="fas fa-envelope"></i>
                    </a>
                </li>
                <li class="nav-item pl-2 mb-2 mb-md-0">
                    <a asp-area="" asp-controller="Home" asp-action="SignIn" type="button"
                       class="btn btn-outline btn-sm btn-rounded btn-navbar waves-effect waves-light">Sign In</a>
                </li>
                <li class="nav-item pl-2 mb-2 mb-md-0">
                    <a asp-area="" asp-controller="Home" asp-action="SignUp" type="button"
                       class="btn btn-outline-info btn-sm btn-rounded btn-navbar waves-effect waves-light">Sign Up</a>
                </li>
            </ul>

        </div>
    </nav>
    <main class="page-content">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>
</body>
</html>
