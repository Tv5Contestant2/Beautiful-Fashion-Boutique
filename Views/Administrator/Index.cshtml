@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/css/cards.css" rel="stylesheet" />

<div class="container-fluid main-container">
    @*Statistics*@
    <div class="jumbotron">
        <div class="row w-100">
            <div class="col-md-3">
                <div class="card border-info mx-sm-1 p-3">
                    <div class="card border-info shadow text-info p-3 my-card"><span class="fas fa-ruble-sign" aria-hidden="true"></span></div>
                    <div class="text-info text-center mt-3"><h6>Total Sales (Monthly)</h6></div>
                    <div class="text-info text-center mt-2"><h4>@ViewBag.Sales</h4></div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-success mx-sm-1 p-3">
                    <div class="card border-success shadow text-success p-3 my-card"><span class="fas fa-truck" aria-hidden="true"></span></div>
                    <div class="text-success text-center mt-3"><h6>Total Products Sold</h6></div>
                    <div class="text-success text-center mt-2"><h4>@ViewBag.ProductsSold</h4></div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-danger mx-sm-1 p-3">
                    <div class="card border-danger shadow text-danger p-3 my-card"><span class="fa fa-inbox" aria-hidden="true"></span></div>
                    <div class="text-danger text-center mt-3"><h6>Pending Delivery</h6></div>
                    <div class="text-danger text-center mt-2"><h4>@ViewBag.Pending</h4></div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-warning mx-sm-1 p-3">
                    <div class="card border-warning shadow text-warning p-3 my-card"><span class="fa fa-heart" aria-hidden="true"></span></div>
                    <div class="text-warning text-center mt-3"><h6>Total Annual Revenue</h6></div>
                    <div class="text-warning text-center mt-2"><h4>@ViewBag.Sales</h4></div>
                </div>
            </div>
        </div>
    </div>

    @*<div class="row">
        <div class="col col-md-7 mx-3 jumbotron">
            <h4>Receipts</h4>
        </div>

        <div class="col col-md-4">
            <h4>Number of items sold</h4>
        </div>
    </div>*@
</div>
