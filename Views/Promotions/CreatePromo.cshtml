@model Promos

@{
    ViewData["Title"] = "Add New Promo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row text">
    <div class="col-md-10 offset-md-1">
        <p>
            <h4>Add Promo</h4>
        </p>

        <div class="form-group">
            <form asp-action="CreatePromo" enctype="multipart/form-data" class="hidden">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                <input type="submit" value="Save" class="btn btn-success float-right" />

                <div id="accordion">
                    <div class="card mt-2">
                        <div class="card-header" id="headingOne">
                            <b>PRIMARY INFORMATION</b>
                            <a class="btn btn-link float-right" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                <i class="far fa-plus-square"></i>
                            </a>
                        </div>

                        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                            <div class="card-body">

                                @*Primary Info*@
                                <div class="row form-group">

                                    <div class="col col-md-8">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>


                                        <label asp-for="Description" class="control-label"></label>
                                        <input asp-for="Description" class="form-control" />
                                        <span asp-validation-for="Description" class="text-danger"></span>


                                        <label asp-for="StartDate" class="control-label"></label>
                                        <input asp-for="StartDate" class="form-control" id="date" placeholder="MM/DD/YYY" type="date" />


                                        <label asp-for="EndDate" class="control-label"></label>
                                        <input asp-for="EndDate" class="form-control" id="date" placeholder="MM/DD/YYY" type="date" />
                                        <div class="col">
                                        </div>


                                        <label asp-for="SalePercentage" class="control-label"></label>
                                        <input asp-for="SalePercentage" class="form-control" type="number" />
                                        <span asp-validation-for="SalePercentage" class="text-danger"></span>


                                        <label asp-for="PromoCategory" class="control-label"></label>
                                        <input asp-for="PromoCategory" class="form-control" />
                                    </div>

                                    <div class="col col-md-4">
                                        <div class="row form-group">

                                            <div class="col col-md-4">
                                                <img id="ImagePreview" src="~/images/default-avatar.jpg" style="width:15em; height:15em" />
                                            </div>

                                            <div class="col col-md-8">
                                                <div class="custom-file">
                                                    <input asp-for="ImageFile" accept="image/*" class="form-control-file" />
                                                </div>


                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $("#ImageFile").on("change", function () {
            var output = document.getElementById('ImagePreview');
            output.src = $(this).val();
        });

    </script>
}