@{
    ViewData["Title"] = "Sign Up";
}

<div class="container-fluid main-container">
    @*Content*@
    <div class="content col-md-5 offset-md-3">
        <div class="row">
            <div class="col col-md-6 offset-md-2">
                <h1 class="offset-md-5">Sign Up</h1>
                <form asp-action="SignIn" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label>First Name</label>
                        <input class="form-control" />

                        <label>Last Name</label>
                        <input class="form-control" />

                        <label>Contact Number</label>
                        <input class="form-control" />

                        <label>Email Address</label>
                        <input class="form-control" />

                        <label>Username</label>
                        <input class="form-control" />

                        <label>Password</label>
                        <input class="form-control" type="password" />

                        <label>Re-try Password</label>
                        <input class="form-control" type="password" />

                        <div style="margin-top: 15px">
                            Already registered? <a asp-area="" asp-controller="Home" asp-action="SignIn">Click here</a>

                            <span class="float-right">
                                <input type="button" class="btn btn-info" value="Register" />
                            </span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>