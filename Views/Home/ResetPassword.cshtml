@model ECommerce1.ViewModel.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}
<section class="py-5">
    <div class="container py-4">
        <div class="row gy-5 gx-5">
            <div class="col-lg-12 align-content-center">
                <div class="bg-light rounded-pill px-4 py-3">
                    <h5 class="mb-0">Reset Password</h5>
                </div>
                <div class="p-4">
                    <p class="lead">Enter your new password</p>
                    <p class="text-muted">And don't forget it this time *fingers-crossed*</p>
                    <hr class="border-bottom border-gray-6">
                    <form asp-action="SubmitResetPassword" enctype="multipart/form-data">
                        <div class="mb-3">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <input type="hidden" value="@ViewBag.Email" asp-for="Email" />
                        <input type="hidden" value="@ViewBag.Token" asp-for="Token" />
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input asp-for="Password" class="form-control" id="password" type="password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" id="password" type="password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <input type="submit" class="btn btn-primary" value="Submit" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>