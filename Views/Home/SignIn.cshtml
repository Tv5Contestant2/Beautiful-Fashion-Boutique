@model ECommerce1.ViewModel.HomeUserViewModel

@{
    ViewData["Title"] = "Sign In";
}
<section class="py-5">
    <div class="container py-4">
        <div class="row gy-5 gx-5">
            <div class="col-lg-6">
                <div class="bg-light rounded-pill px-4 py-3">
                    <h5 class="mb-0">Login</h5>
                </div>
                <div class="p-4">
                    <p class="lead">Already our customer?</p>
                    <p class="text-muted">Sign into your account and get notified on exciting news that are in store for you!</p>
                    <hr class="border-bottom border-gray-6">
                    <form asp-action="SignIn" enctype="multipart/form-data">
                        @if (Model.isLogInError)
                        {
                            <div class="mb-3">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>
                        }
                        <div class="mb-3">
                            <label class="form-label" for="Email">Email</label>
                            <input asp-for="SignInEmail" class="form-control" id="SignInEmail" type="text">
                            <span asp-validation-for="SignInEmail" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="SignInPassword">Password</label>
                            <input asp-for="SignInPassword" class="form-control" id="SignInPassword" type="password">
                            <span asp-validation-for="SignInPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="text-center">
                            <input type="submit" class="btn btn-primary" value="Sign In" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="bg-light rounded-pill px-4 py-3">
                    <h5 class="mb-0">New account</h5>
                </div>
                <div class="p-4">
                    <p class="lead">Not our registered customer yet?</p>
                    <p class="text-muted">Register and discover a new world of fashion, fantastic discounts and much more!</p>
                    <hr class="border-bottom border-gray-6">
                    <form asp-action="SignUp" enctype="multipart/form-data" method="post">
                        @if (Model.isSignUpError)
                        {
                            <div class="mb-3">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>
                        }
                        <div class="mb-3">
                            <label class="form-label" for="name">First Name</label>
                            <input asp-for="FirstName" class="form-control" id="email" type="text">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="name">Last Name</label>
                            <input asp-for="LastName" class="form-control" id="email" type="text">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="Email">Email</label>
                            <input asp-for="Email" class="form-control" id="email" type="text">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input asp-for="Password" class="form-control" id="password" type="password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" id="password" type="password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-user me-2"></i>Register
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>