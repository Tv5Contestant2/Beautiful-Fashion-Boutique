@model ECommerce1.ViewModel.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}
<section class="py-5">
    <div class="container py-4">
        <div class="row gy-5 gx-5">
            <div class="col-lg-12 align-content-center">
                <div class="bg-light rounded-pill px-4 py-3">
                    <h5 class="mb-0">Reset Password</h5>
                </div>
                <div class="p-4">
                    <p class="lead">Did you forget your password?</p>
                    <p class="text-muted">Don't fret! Just enter your email and we will be sending you a reset link.</p>
                    <hr class="border-bottom border-gray-6">
                    <form asp-action="SubmitForgotPassword" enctype="multipart/form-data">
                        @if (Model.isLogInError)
                        {
                            <div class="mb-3">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>
                        }
                        <div class="mb-3">
                            <label class="form-label" for="Email">Email</label>
                            <input asp-for="Email" class="form-control" id="Email" type="text">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <input type="submit" class="btn btn-primary" value="Submit" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>