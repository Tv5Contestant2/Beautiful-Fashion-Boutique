@model ECommerce1.ViewModel.RoleViewModel

@{
    ViewData["Title"] = "Update Role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row text">
    <div class="col-md-10 offset-md-1">
        <p>
            <h4>Update Role</h4>
        </p>

        <div class="form-group">
            <form asp-action="UpdateRole" enctype="multipart/form-data" class="hidden">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                <input type="submit" value="Save" class="btn btn-success float-right" />

                <div id="accordion">
                    <div class="card mt-2">
                        <div class="card-header" id="headingOne">
                            <b>ROLE INFORMATION</b>
                            <a class="btn btn-link float-right" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                <i class="far fa-plus-square"></i>
                            </a>
                        </div>

                        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                            <div class="card-body">
                                <div class="form-group row">
                                    <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="RoleName" class="form-control" placeholder="Name">
                                        <span asp-validation-for="RoleName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headingTwo">
                            <b>USERS IN THIS ROLE</b>
                            <a class="btn btn-link float-right" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseOne">
                                <i class="far fa-plus-square"></i>
                            </a>
                        </div>
                        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
                            <div class="card-body">
                                @if (Model.Users.Any())
                                {
                                    foreach (var user in Model.Users)
                                    {
                                        <h5 class="card-title">@user</h5>
                                    }
                                }
                                else
                                {
                                    <h5 class="card-title">None at the moment</h5>
                                }
                            </div>
                        </div>
                        <div class="card-footer">
                            <a asp-controller="RoleManagement" asp-action="UpdateUsersInRole"
                               asp-route-roleId="@Model.Id" class="btn btn-primary">
                                Add or remove users from this role
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>