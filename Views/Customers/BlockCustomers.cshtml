@model IEnumerable<Customers>

@{
    ViewData["Title"] = "Customer Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>

<div class="container-fluid main-container">
    <div class="row">
        <h2>Customer Management</h2>
    </div>

    @*Search*@
    <div class="row">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search" style="width:350px">
            <div class="col">
                <a asp-controller="Customers" asp-action="ShowCustomers" class="btn btn-info float-right" type="button">
                    <i class="fas fa-user"></i>&nbsp;&nbsp;Show Customers
                </a>
            </div>
        </div>
    </div>

    <div class="row mt-3" style="margin-left: -30px" width="auto">

        @*Grid*@
        <div class="col-12">
            <div class="table-responsive-md">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Image</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email Address</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>1</td>
                                <td>
                                    <img src="@String.Format("data:image/jpg;base64,{0}", item.Image)" class="avatar" alt="Avatar">
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.CustomerFirstName)</td>
                                <td>@Html.DisplayFor(modelItem => item.CustomerLastName)</td>
                                <td>@Html.DisplayFor(modelItem => item.CustomerEmail)</td>
                                <td><span class="status text-success">&bull;</span> Active</td>

                                <td width="10%">
                                    <a asp-action="UnBlockCustomer" asp-route-id="@item.CustomerID"><i class="fas fa-user">&#xE5C9;</i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="clearfix">
                    <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
                    <ul class="pagination">
                        <li class="page-item disabled"><a href="#">Previous</a></li>
                        <li class="page-item active"><a href="#" class="page-link">1</a></li>
                        <li class="page-item"><a href="#" class="page-link">2</a></li>
                        <li class="page-item"><a href="#" class="page-link">3</a></li>
                        <li class="page-item"><a href="#" class="page-link">Next</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div style="position: fixed; bottom: 10px; right: 10px">
        <button onclick="topFunction()" id="btnTop" value="Back to Top" class="btn btn-outline-danger">
            <i class="fa fa-arrow-up" aria-hidden="true"></i>
        </button>
    </div>
</div>

<script>
    var btnTop = document.getElementById("btnTop");
    window.onload = function () { btnTop.style.display = "none"; }
    window.onscroll = function () { scrollFunction(); };

    function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            btnTop.style.display = "block";
        } else {
            btnTop.style.display = "none";
        }
    }

    function topFunction() {
        $('html, body').animate({ scrollTop: 0 }, 'slow');
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }

    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();

        $("#btnGrid").click(function () {
            $("#dvThumbnail").hide();
            $("#dvGrid").show();
        });

        $("#btnThumbnail").click(function () {
            $("#dvGrid").hide();
            $("#dvThumbnail").show();
        });
    });

</script>
