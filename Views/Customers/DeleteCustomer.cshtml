@model User

@{
    ViewData["Title"] = "Delete Customer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <div class="row">
            <div class="col-md-8 offset-2 pt-4">
                <h2>Are you sure you want to delete?</h2>
                <div class="row">
                    <div class="col pb-4">
                        <form asp-action="DeleteCustomer">
                            <div class="form-group">
                                <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                                <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>