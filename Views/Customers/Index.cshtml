@model IEnumerable<User>

@{
    ViewData["Title"] = "Customer Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="m-0">@ViewBag.Title</h4>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right px-3 py-2">
                        <li class="breadcrumb-item"><a asp-controller="Administrator" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">@ViewBag.Title</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <input id="inptSearch" class="form-control w-50" placeholder="Search" />
                <div class="col">
                    <a asp-controller="Customers" asp-action="BlockCustomers" class="btn btn-warning float-right" type="button">
                        <i class="fas fa-user-slash"></i>&nbsp;&nbsp;Show Blocked Customers
                    </a>
                    <a asp-controller="Customers" asp-action="CreateCustomer" class="btn btn-info float-right" type="button">
                        <i class="fas fa-plus-circle"></i>&nbsp;&nbsp;Add Customer
                    </a>
                </div>
            </div>
        </div>

        <div class="row mt-3" style="margin-left: -30px" width="auto">
            <div class="col-9">
                @*Grid View*@
                <div id="dvGrid" class="table-responsive-md">
                    <table id="dtEmployeeList" name="dtEmployeeList" class="table table-hover table-fixed">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Image</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email Address</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>1</td>
                                    <td>
                                        <img src="@String.Format("data:image/jpg;base64,{0}", item.Image)" class="avatar" alt="Avatar">
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td><span class="status text-success">&bull;</span> Active</td>

                                    <td width="10%">
                                        <a asp-action="UpdateCustomer" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="bottom" title="Edit"><i class="fas fa-pencil-alt">&#xE8B8;</i></a>
                                        <a asp-action="DeleteCustomer" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="bottom" title="Delete"><i class="fas fa-trash-alt">&#xE5C9;</i></a>
                                        <a asp-action="BlockCustomer" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="bottom" title="Block"><i class="fas fa-user-slash">&#xE5C9;</i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="clearfix">
                        <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
                        <ul class="pagination">
                            <li class="page-item disabled"><a href="#">Previous</a></li>
                            <li class="page-item active"><a href="#" class="page-link">1</a></li>
                            <li class="page-item"><a href="#" class="page-link">2</a></li>
                            <li class="page-item"><a href="#" class="page-link">3</a></li>
                            <li class="page-item"><a href="#" class="page-link">Next</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            @*Statistics*@
            <div class="col-md-3">
                <div class="card card-stats">
                    <div class="card-title m-auto py-2">
                        <span class="h5 font-weight-bold">Statistics</span>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @*Active*@
                            <div class="col-auto">
                                <div class="icon icon-shape bg-info text-white rounded-circle shadow">
                                    <i class="fas fa-thumbs-up"></i>
                                </div>
                            </div>
                            <div class="col col-auto mb-3">
                                <h6 class="card-title text-uppercase text-muted mb-0">Active</h6>
                                <span class="h2 font-weight-bold mb-0">0</span>
                            </div>
                        </div>
                        <div class="row">
                            @*Banned*@
                            <div class="col-auto">
                                <div class="icon icon-shape bg-danger text-white rounded-circle shadow">
                                    <i class="fas fa-sync-alt"></i>
                                </div>
                            </div>
                            <div class="col col-auto mb-3">
                                <h6 class="card-title text-uppercase text-muted mb-0">Banned</h6>
                                <span class="h2 font-weight-bold mb-0">0</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div style="position: fixed; bottom: 10px; right: 10px">
            <button onclick="topFunction()" id="btnTop" value="Back to Top" class="btn btn-outline-danger">
                <i class="fa fa-arrow-up" aria-hidden="true"></i>
            </button>
        </div>
    </section>
</div>

<script>
    var btnTop = document.getElementById("btnTop");
    window.onload = function () { btnTop.style.display = "none"; }
    window.onscroll = function () { scrollFunction(); };

    $(document).ready(function () {
        $("#inptSearch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#dtEmployeeList tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

    function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            btnTop.style.display = "block";
        } else {
            btnTop.style.display = "none";
        }
    }

    function topFunction() {
        $('html, body').animate({ scrollTop: 0 }, 'slow');
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }

    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();

        $("#btnGrid").click(function () {
            $("#dvThumbnail").hide();
            $("#dvGrid").show();
        });

        $("#btnThumbnail").click(function () {
            $("#dvGrid").hide();
            $("#dvThumbnail").show();
        });
    });
</script>