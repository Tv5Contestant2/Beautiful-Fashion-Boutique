@model IEnumerable<Cart>

@{
    ViewData["Title"] = "Cart";
    ViewData["Count"] = 1;
}
<section class="py-5 bg-light">
    <div class="container py-4">
        <div class="row">
            <div class="col-lg-9 order-2 order-lg-1">
                <h1>@ViewBag.Title</h1>
                @if (Model != null)
                {
                    <p class="lead text-muted">
                        You currently have @Model.Select(x => x.Quantity).Sum() item(s) in your shopping cart
                    </p>
                }
                else
                {
                    <p class="lead text-muted">
                        You currently have 0 item(s) in your shopping cart
                    </p>
                }
            </div>
            <div class="col-lg-3 text-end order-1 order-lg-2">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb py-4 justify-content-lg-end mb-0">
                        <li class="breadcrumb-item"><a asp-controller="StoreFront" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">@ViewBag.Title</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>

@if (Model.Count() > 0)
{
    <section class="py-5">
        <div class="container py-5">
            <div class="cart-outer">
                <div class="cart-inner">
                    <div class="bg-light rounded-pill px-4 py-3">
                        <div class="row fw-normal text-uppercase">
                            <div class="col-5">Product</div>
                            <div class="col-2">Price</div>
                            <div class="col-2">Quantity</div>
                            <div class="col-2">Total</div>
                            <div class="col-1 text-center">Remove</div>
                        </div>
                    </div>
                    @*Product*@
                    @*<form asp-controller="Cart">*@
                        @foreach (var item in Model)
                        {
                            <div class="p-4 border-bottom">
                                <div class="row d-flex align-items-center bord">
                                    <div class="col-5">
                                        <div class="d-flex align-items-center">
                                            <img class="img-fluid" src="@String.Format("data:image/jpg;base64,{0}", item.Product.Image)" alt="@item.Product.Name" width="75">
                                            <div class="ms-3">
                                                <a asp-controller="StoreFront" asp-action="ViewProduct" asp-route-id="@item.ProductId">
                                                    <h5 class="mb-0 text-dark fw-normal">@item.Product.Name</h5><span class="text-muted">Size: Large</span>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-2"><span>Php @item.Product.Price</span></div>
                                    <div class="col-2">
                                        <div class="d-flex align-items-center">
                                            <div class="quantity d-flex align-items-center me-4">
                                                <a class="dec-btn" onclick="decrease(this)" asp-controller="Cart" asp-action="RemoveFromCartByQty" asp-route-id="@item.ProductId">-</a>
                                                <input class="quantity-no" type="text" value="@item.Quantity">
                                                <a class="inc-btn">+</a> @*onclick="increase(this)" *@
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        @{
                                            var total = item.Product.Price * item.Quantity;
                                            <span>Php @total</span>
                                        }
                                    </div>
                                    <div class="col-1 text-center">
                                        <a class="delete btn btn-link text-dark p-0" asp-action="RemoveFromCart" asp-route-id="@item.ProductId">
                                            <i class="fas fa-trash-alt"></i></a>
                                    </div>
                                </div>
                            </div>
                        }
                    @*</form>*@
                </div>
            </div>
        </div>
    </section>
    <section class="pb-5">
        <div class="container pb-5">
            <div class="row gy-4">
                <div class="col-lg-6">
                    @*<div class="bg-light rounded-pill px-4 py-3">
                            <h6 class="mb-0 text-uppercase">Coupon Code</h6>
                        </div>
                        <div class="p-4">
                            <p>If you have a coupon code, please enter it in the box below</p>
                            <form action="#">
                                <div class="input-group mb-3">
                                    <input class="form-control" type="text" name="coupon">
                                    <button class="btn btn-dark" type="button">Apply coupon</button>
                                </div>
                            </form>
                        </div>*@
                    <div class="bg-light rounded-pill px-4 py-3">
                        <h6 class="mb-0 text-uppercase">Instructions for seller</h6>
                    </div>
                    <div class="p-4">
                        <p>If you have some information for the seller you can leave them in the box below</p>
                        <form action="#">
                            <textarea class="rounded form-control" name="instructions"></textarea>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="bg-light rounded-pill px-4 py-3">
                        <h6 class="mb-0 text-uppercase">Order Summary</h6>
                    </div>
                    <div class="p-4">
                        <p class="text-muted">Shipping and additional costs are calculated based on values you have entered.</p>
                        <ul class="list-unstyled">
                            @foreach (var item in Model)
                            {
                                var total = item.Product.Price * item.Quantity;
                                <li class="d-flex justify-content-between py-3 border-bottom"><span>Order Subtotal </span><strong class="fw-normal">Php @total</strong></li>
                                <li class="d-flex justify-content-between py-3 border-bottom"><span>Shipping and handling</span><strong class="fw-normal">Php 0.00</strong></li>
                                <li class="d-flex justify-content-between py-3 border-bottom"><span>Tax</span><strong class="fw-normal">Php 0.00</strong></li>
                                <li class="d-flex justify-content-between py-3 border-bottom"><span>Total</span><strong class="text-primary h5 mb-0">Php @total</strong></li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="col-lg-12 text-center py-4">
                    <a class="btn btn-outline-secondary btn-lg px-5" asp-controller="StoreFront" asp-action="ShopAll"> <i class="fas fa-angle-left me-2"></i>Continue Shopping</a>
                    <a class="btn btn-primary btn-lg px-5" asp-controller="Cart" asp-action="Checkout">Proceed to checkout<i class="fas fa-long-arrow-alt-right ms-2"></i></a>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <section class="py-5">
        <div class="container py-5">
            <div class="item col-xl-12">
                <h2 class="mb-1">Oh no! Your cart is empty.</h2>
                <p class="text-gray-6 mb-1">Don't miss your chance! Start shopping now.</p>
            </div>
        </div>
    </section>
}

<div style="position: fixed; bottom: 10px; right: 10px;">
    <button onclick="topFunction()" id="btnTop" value="Back to Top" class="btn btn-outline-danger">
        <i class="fa fa-arrow-up" aria-hidden="true"></i>
    </button>
</div>

<script>
    var btnTop = document.getElementById("btnTop");
    window.onload = function () { btnTop.style.display = "none"; }
</script>
