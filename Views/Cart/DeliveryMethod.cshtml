@model IEnumerable<Cart>

@{
    ViewData["Title"] = "Checkout";
}
<section class="py-5 bg-light">
    <div class="container py-4">
        <div class="row">
            <div class="col-lg-9 order-2 order-lg-1">
                <h1>@ViewBag.Title</h1>
                @if (Model != null)
                {
                    <p class="lead text-muted">
                        You currently have @ViewBag.Cart.Count() item(s) in your basket
                    </p>
                }
                else
                {
                    <p class="lead text-muted">
                        You currently have 0 item(s) in your basket
                    </p>
                }
            </div>
            <div class="col-lg-3 text-end order-1 order-lg-2">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb py-4 justify-content-lg-end mb-0">
                        <li class="breadcrumb-item"><a asp-controller="StoreFront" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">@ViewBag.Title</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
@if (Model == null)
{
<section class="py-5">
    <div class="container py-5">
        <div class="row gy-5 gx-5">
            <div class="col-lg-8">
                <ul class="nav nav-pills rounded-lg-pill flex-column flex-lg-row nav-fill pills-lg-rounded list-separated-lg-secondary mb-5">
                    <li class="nav-item my-1 my-lg-0"><a class="nav-link py-3 small text-uppercase" asp-controller="Cart" asp-action="Checkout">Address</a></li>
                    <li class="nav-item my-1 my-lg-0 active"><a class="nav-link py-3 small text-uppercase active" asp-controller="Cart" asp-action="DeliveryMethod">Delivery Method </a></li>
                    <li class="nav-item my-1 my-lg-0"><a class="nav-link py-3 small text-uppercase disabled" href="#">Payment Method </a></li>
                    <li class="nav-item my-1 my-lg-0"><a class="nav-link py-3 small text-uppercase disabled" href="#">Order Review</a></li>
                </ul>
                <div id="delivery-method">
                    <form class="shipping-form mb-5 px-3" action="#">
                        <div class="row">
                            <div class="form-check col-md-6 mb-4">
                                <input class="form-check-input" id="option1" type="radio" name="shippping">
                                <label class="form-check-label" for="option1"><strong>Usps next day</strong><br><span class="text-sm text-muted">Get it right on next day - fastest option possible.</span></label>
                            </div>
                            <div class="form-check col-md-6 mb-4">
                                <input class="form-check-input" id="option2" type="radio" name="shippping">
                                <label class="form-check-label" for="option2"><strong>Usps next day</strong><br><span class="text-sm text-muted">Get it right on next day - fastest option possible.</span></label>
                            </div>
                            <div class="form-check col-md-6 mb-4">
                                <input class="form-check-input" id="option3" type="radio" name="shippping">
                                <label class="form-check-label" for="option3"><strong>Usps next day</strong><br><span class="text-sm text-muted">Get it right on next day - fastest option possible.</span></label>
                            </div>
                            <div class="form-check col-md-6 mb-4">
                                <input class="form-check-input" id="option4" type="radio" name="shippping">
                                <label class="form-check-label" for="option4"><strong>Usps next day</strong><br><span class="text-sm text-muted">Get it right on next day - fastest option possible.</span></label>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex justify-content-between flex-column flex-lg-row">
                        <a class="btn btn-outline-secondary px-sm-5 my-1" asp-controller="Cart" asp-action="Checkout"><i class="fas fa-angle-left me-2"></i>Back to Address</a>
                        <a class="btn btn-primary px-sm-5 my-1" asp-controller="Cart" asp-action="PaymentMethod">Choose payment method<i class="fas fa-angle-right ms-2"></i></a></div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card rounded-0">
                    <div class="card-body px-4 py-5">
                        <h6 class="text-uppercase">Order Summary</h6>
                        <p class="fw-normal text-muted">Shipping and additional costs are calculated based on values you have entered</p>
                        <ul class="list-unstyled mb-0">
                            <li class="d-flex justify-content-between py-3 border-bottom"><span>Order Subtotal </span><strong class="fw-normal">$390.00</strong></li>
                            <li class="d-flex justify-content-between py-3 border-bottom"><span>Shipping and handling</span><strong class="fw-normal">$10.00</strong></li>
                            <li class="d-flex justify-content-between py-3 border-bottom"><span>Tax</span><strong class="fw-normal">$0.00</strong></li>
                            <li class="d-flex justify-content-between py-3"><span>Total</span><strong class="text-primary h5 mb-0">$400.00</strong></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
}
else
{
    <div class="item col-xl-12">
        <h2 class="mb-1">Oh no! Your basket is empty.</h2>
        <p class="text-gray-6 mb-1">Don't miss your chance! Start shopping now.</p>
    </div>
}

<div style="position: fixed; bottom: 10px; right: 10px;">
    <button onclick="topFunction()" id="btnTop" value="Back to Top" class="btn btn-outline-danger">
        <i class="fa fa-arrow-up" aria-hidden="true"></i>
    </button>
</div>

<script>
    var btnTop = document.getElementById("btnTop");
    window.onload = function () { btnTop.style.display = "none"; }
</script>
