@model IEnumerable<Product>
@using ECommerce1.Data.Enums

@{
    ViewData["Title"] = "Product Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="m-0">Product Management</h4>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right px-3 py-2">
                        <li class="breadcrumb-item"><a asp-controller="Administrator" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">@ViewBag.Title</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <input id="inptSearch" class="form-control w-50" placeholder="Search" />
                <div class="col">
                    <a asp-controller="Products" asp-action="CreateProduct" class="btn btn-info float-right" type="button">
                        <i class="fas fa-plus-circle"></i>&nbsp;&nbsp;Add Product
                    </a>
                    <button id="btnGrid" class="btn btn-info" type="button"><i class="fas fa-list"></i></button>
                    <button id="btnThumbnail" class="btn btn-info" type="button"><i class="fas fa-th-large"></i></button>
                </div>
            </div>

            <div class="row mt-3" style="margin-left: -30px" width="auto">
                <div class="col-9">
                    @*Grid View*@
                    <div id="dvGrid" class="table-responsive-md">
                        <table id="dtProductList" name="dtProductList" class="table table-hover table-fixed">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Image</th>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>
                                            <img src="@String.Format("data:image/jpg;base64,{0}", item.Image)" class="avatar" alt="@item.Name">
                                        </td>
                                        <td><a asp-controller="Products" asp-action="ViewProduct" asp-route-id="@item.Id">@item.Name</a></td>
                                        <td>Php @item.Price.ToString("#,##0.00")</td>
                                        <td>@item.StockQty</td>
                                        <td>
                                            @{
                                                var status = Enum.GetName(typeof(StatusEnum), item.StatusId);
                                                if (item.StockStatusId == (int)ECommerce1.Data.Enums.StockStatusEnum.InStock)
                                                {
                                                    status = "In-Stock";
                                                    <span class="status text-success">&bull;</span> @status
                                                }
                                                else if (item.StockStatusId == (int)ECommerce1.Data.Enums.StockStatusEnum.OutOfStock)
                                                {
                                                    status = "Out-Of-Stock";
                                                    <span class="status text-danger">&bull;</span> @status
                                                }
                                                else if (item.StockStatusId == (int)ECommerce1.Data.Enums.StockStatusEnum.PhasedOut)
                                                {
                                                    status = "Phased-Out";
                                                    <span class="status text-danger">&bull;</span> @status
                                                }}
                                        </td>
                                        <td class="col-sm-2">
                                            <a asp-action="ViewProduct" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="bottom" title="View"><i class="fas fa-eye">&#xE5C9;</i></a>
                                            <a asp-action="UpdateProduct" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="bottom" title="Edit"><small><i class="fas fa-pencil-alt">&#xE8B8;</i></small></a>
                                            <a asp-action="DeleteProduct" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="bottom" title="Delete"><i class="fas fa-trash-alt">&#xE5C9;</i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="clearfix">
                            <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
                            <ul class="pagination">
                                <li class="page-item disabled"><a href="#">Previous</a></li>
                                <li class="page-item active"><a href="#" class="page-link">1</a></li>
                                <li class="page-item"><a href="#" class="page-link">2</a></li>
                                <li class="page-item"><a href="#" class="page-link">3</a></li>
                                <li class="page-item"><a href="#" class="page-link">Next</a></li>
                            </ul>
                        </div>
                    </div>

                    @*Thumbnail View*@
                    <div id="dvThumbnail" class="row gy-5 mb-5 my-1" style="display: none;">
                        @foreach (var item in Model)
                        {
                            <div class="item col-xl-4 col-md-6">
                                <div class="product">
                                    <div class="image align-items-center justify-content-center bg-light">
                                        <img class="img-fluid" src="@String.Format("data:image/jpg;base64,{0}", item.Image)" alt="@item.Name">
                                        <div class="hover-overlay d-flex align-items-center justify-content-center">
                                            <div class="CTA d-flex align-items-center justify-content-center">
                                                <a asp-action="ViewProduct" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="bottom" title="View">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="UpdateProduct" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="bottom" title="Update">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </a>
                                                <a asp-action="DeleteProduct" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="bottom" title="Delete">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="pt-3">
                                        <small>
                                            @{
                                                var status = Enum.GetName(typeof(StatusEnum), item.StatusId);
                                                if (item.StockStatusId == (int)ECommerce1.Data.Enums.StockStatusEnum.InStock)
                                                {
                                                    status = "In-Stock";
                                                    <span class="status text-success">&bull;</span> @status
                                                }
                                                else if (item.StockStatusId == (int)ECommerce1.Data.Enums.StockStatusEnum.OutOfStock)
                                                {
                                                    status = "Out-Of-Stock";
                                                    <span class="status text-danger">&bull;</span> @status
                                                }
                                                else if (item.StockStatusId == (int)ECommerce1.Data.Enums.StockStatusEnum.PhasedOut)
                                                {
                                                    status = "Phased-Out";
                                                    <span class="status text-danger">&bull;</span> @status
                                                }}
                                        </small>
                                        <a class="reset-anchor" asp-controller="StoreFront" asp-action="ViewProduct" asp-route-id="@item.Id">
                                            <h3 class="h6 mb-0 text-uppercase">@item.Name</h3>
                                        </a><span class="text-muted">Php @item.Price</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                @*Stock Count*@
                <div class="col-md-3">
                    <div class="card card-stats">
                        <div class="card-title m-auto py-2">
                            <span class="h5 font-weight-bold">Stock Count</span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @*In-Stock*@
                                <div class="col-auto">
                                    <div class="icon icon-shape bg-info text-white rounded-circle shadow">
                                        <i class="fas fa-thumbs-up"></i>
                                    </div>
                                </div>
                                <div class="col col-auto mb-3">
                                    <h6 class="card-title text-uppercase text-muted mb-0">In-Stock</h6>
                                    <span class="h2 font-weight-bold mb-0">@ViewBag.InStock</span>
                                </div>
                            </div>
                            <div class="row">
                                @*Out-of-stock*@
                                <div class="col-auto">
                                    <div class="icon icon-shape bg-danger text-white rounded-circle shadow">
                                        <i class="fas fa-sync-alt"></i>
                                    </div>
                                </div>
                                <div class="col col-auto mb-3">
                                    <h6 class="card-title text-uppercase text-muted mb-0">Out-of-stock</h6>
                                    <span class="h2 font-weight-bold mb-0">@ViewBag.OutOfStock</span>
                                </div>
                            </div>
                            <div class="row">
                                @*Warning*@
                                <div class="col-auto">
                                    <div class="icon icon-shape bg-warning text-white rounded-circle shadow">
                                        <i class="fas fa-exclamation-triangle"></i>
                                    </div>
                                </div>
                                <div class="col col-auto mb-3">
                                    <h6 class="card-title text-uppercase text-muted mb-0">Critical</h6>
                                    <span class="h2 font-weight-bold mb-0">@ViewBag.Critical</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div style="position: fixed; bottom: 10px; right: 10px">
                <button onclick="topFunction()" id="btnTop" value="Back to Top" class="btn btn-outline-danger">
                    <i class="fa fa-arrow-up" aria-hidden="true"></i>
                </button>
            </div>
        </div>
    </section>
</div>

<script>
    var btnTop = document.getElementById("btnTop");
    window.onload = function () { btnTop.style.display = "none"; }
    window.onscroll = function () { scrollFunction(); };

    $(document).ready(function () {
        $("#inptSearch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#dtProductList tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

    function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            btnTop.style.display = "block";
        } else {
            btnTop.style.display = "none";
        }
    }

    function topFunction() {
        $('html, body').animate({ scrollTop: 0 }, 'slow');
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }

    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();

        $("#btnGrid").click(function () {
            $("#dvThumbnail").hide();
            $("#dvGrid").show();
        });

        $("#btnThumbnail").click(function () {
            $("#dvGrid").hide();
            $("#dvThumbnail").show();
        });
    });

</script>