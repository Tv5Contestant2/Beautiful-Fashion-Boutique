@model ECommerce1.ViewModel.RoleViewModel

@{
    ViewData["Title"] = "Update Role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row text">
    <div class="col-md-10 offset-md-1">
        <p>
            <h4>@ViewBag.Title</h4>
        </p>

        <div class="form-group">
            <form asp-action="UpdateRole" enctype="multipart/form-data" class="hidden">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                <input type="submit" value="Save" class="btn btn-success float-right" />

                <div id="accordion">
                    <div class="card mt-2">
                        <div class="card-header" id="headingOne">
                        </div>

                        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                            <div class="card-body">
                                <div class="row form-group">

                                    <div class="col col-md-8">
                                        <div>
                                            <label asp-for="Role" class="control-label mt-2"></label>
                                            <input asp-for="Role" class="form-control" />
                                            <span asp-validation-for="Role" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div style="position: fixed; bottom: 10px; right: 10px">
            <button onclick="topFunction()" id="btnTop" value="Back to Top" class="btn btn-outline-danger">
                <i class="fa fa-arrow-up" aria-hidden="true"></i>
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var btnTop = document.getElementById("btnTop");
        window.onload = function () { btnTop.style.display = "none"; }
        window.onscroll = function () { scrollFunction(); };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                btnTop.style.display = "block";
            } else {
                btnTop.style.display = "none";
            }
        }

        function topFunction() {
            $('html, body').animate({ scrollTop: 0 }, 'slow');
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>
}